{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "CF Blocks API",
    "description": "A simple API used to build/track Food consumption."
  },
  "schemes": [
    "http"
  ],
  "host": "localhost:4201",
  "basePath": "",
  "paths": {
    "/ping": {
      "tags":[
        "Test"
      ],
      "get": {
        "summary": "Test Connection to Server",
        "description": "Send a ping to test connecting to server.",
        "responses": {
          "200": {
            "description": "Successful Connection",
            "schema": {
              "type": "JSON",
              "items": {
                "properties": {
                  "message": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/authenticate": {
      "tags":[
        "Login"
      ],
      "post": {
        "summary": "Test Connection to Server",
        "description": "Send a ping to test connecting to server.",
        "consumes":[
          "application/json"
        ],
        "produces":[
          "application/json"
        ],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "description": "Username & Password Authentication",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Login"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful Connection",
            "schema": {
              "type": "JSON",
              "items": {
                "properties": {
                  "message": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "definitions": {
    "Login": {
      "type": "object",
      "properties": {
        "username": {
          "type": "string",
          "example": "testuser1"
        },
        "password": {
          "type": "string",
          "example": "Test!123"
        }
      },
      "xml": {
        "name": "Login"
      }
    },
    "Restaurant": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "format": "int64"
        },
        "name": {
          "type": "string",
          "example": "Italian Classics"
        },
        "description": {
          "type": "string",
          "example": "The Best Food in Town"
        },
        "menu": {
          "type": "array",
          "items":{
            "$ref":"#/definitions/Menu"
          }
        }
      },
      "xml": {
        "name": "Restaurant"
      }
    },
    "Menu": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "format": "int64"
        },
        "restaurant": {
          "type": "integer",
          "format": "int64"
        },
        "name": {
          "type": "string",
          "example": "Brunch"
        },
        "description": {
          "type": "string",
          "example": "Saturday & Sunday from 8am - 2pm"
        },
        "menuSections": {
          "type": "array",
          "items":{
            "$ref":"#/definitions/MenuSection"
          }
        }
      },
      "xml": {
        "name": "Menu"
      }
    },
    "MenuSection": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "format": "int64"
        },
        "menu": {
          "type": "integer",
          "format": "int64"
        },
        "name": {
          "type": "string",
          "example": "Today's Specials"
        },
        "description": {
          "type": "string",
          "example": "These specials will not be around long. Get them while you can."
        },
        "displayOrder": {
          "type": "integer",
          "format": "int32"
        },
        "foods": {
          "type": "array",
          "items":{
            "$ref":"#/definitions/Food"
          }
        },
        "foodAddOns": {
          "type": "array",
          "items":{
            "$ref":"#/definitions/AddOn"
          }
        }
      },
      "xml": {
        "name": "MenuSection"
      }
    },
    "Food": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "format": "int64"
        },
        "menuSection": {
          "type": "integer",
          "format": "int64"
        },
        "name": {
          "type": "string",
          "example": "Spaghetti & Marinara"
        },
        "description": {
          "type": "string",
          "example": "An Italian Classic with our very own homemade sauce"
        },
        "imgSrc": {
          "type": "string",
          "example": ""
        },
        "price": {
          "type": "number",
          "format": "double",
          "example": 8.99
        },
        "foodAddOns": {
          "type": "array",
          "items":{
            "$ref":"#/definitions/AddOn"
          }
        }
      },
      "xml": {
        "name": "Food"
      }
    },
    "AddOn": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "format": "int64"
        },
        "food": {
          "type": "integer",
          "format": "int64"
        },
        "name": {
          "type": "string",
          "example":"Chips & Salsa"
        },
        "description": {
          "type": "string",
          "example":"Serves 2 - 4"
        },
        "imgSrc": {
          "type": "string",
          "example": ""
        },
        "price": {
          "type": "number",
          "format": "double",
          "example": 5.99
        }
      },
      "xml": {
        "name": "AddOn"
      }
    }
  }
}

